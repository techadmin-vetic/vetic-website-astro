---
const {
  content: { ClinicServices },
} = Astro.props;
// console.log(ClinicServices);
---

<style>
  .vetic-services-bg {
    background-image: url("https://vetic-img.s3.ap-south-1.amazonaws.com/website/Website-Astro/Banner+Image/bgIconM.webp");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: top right;
  }

  @media (min-width: 768px) {
    .vetic-services-bg {
      background-image: url("https://vetic-img.s3.ap-south-1.amazonaws.com/website/Website-Astro/Banner+Image/bgIconD.webp");
      background-position: top right;
    }
  }
</style>

<div class="bg-cover bg-center vetic-services-bg">
  <div class="container w-11/12 mx-auto py-10 sm:py-12">
    <div class="mx-auto lg:mx-0 pb-8">
      <h2 class="text-2xl sm:text-4xl font-primaryFont text-gray-800 mb-4">
        {ClinicServices?.heading1}
        {ClinicServices?.heading2}
      </h2>
    </div>
    <ul
      role="list"
      class="mx-auto grid grid-cols-2 sm:gap-10 gap-x-4 gap-y-4  sm:grid-cols-3 md:grid-cols-4 lg:mx-0 lg:max-w-none lg:grid-cols-4"
    >
      {
        ClinicServices.clinicServicesCard.map((services) => {
          return (
            <li class="p-4 text-center bg-white rounded-2xl flex flex-col items-center justify-center">
              <img
                class="mx-auto h-12 w-12 rounded-md"
                src={services?.image}
                alt="services_logos"
              />
              <h3 class="mt-4 sm:text-[20px] text-[16px] font-secondaryFont text-gray-900 w-40">
                {services?.heading}
              </h3>
            </li>
          );
        })
      }
    </ul>
  </div>
</div>
