---
import BookNowButton from "@components/ui/BookNowButton.astro";
const {
  content: { bannerSection },
} = Astro.props;
// console.log(bannerSection);
---

<div class="">
  <div class="relative">
    <!--Desktop Image-->
    <div class="hidden sm:flex gap-4 mb-8 relative">
      <img
        src={bannerSection?.desktopImage}
        alt="Careers_hero_image"
        class="w-full h-[400px] object-fill"
      />
      <div
        class="absolute bottom-0 left-0 w-full h-1/3 bg-gradient-to-t from-white to-transparent"
      >
      </div>
    </div>
    <!--Mobile Image-->
    <div class="sm:hidden mb-6 relative">
      <img
      src={bannerSection?.mobileImage}
        alt="Careers_hero_image"
        class="w-full h-auto object-cover"
      />
      <div
        class="absolute bottom-0 left-0 w-full h-1/3 bg-gradient-to-t from-white to-transparent"
      >
      </div>
    </div>
    <div class="flex items-center justify-center">
      <div class="text-center">
        <h2 class="text-2xl sm:text-4xl font-primaryFont text-gray-800 mb-4">
       {bannerSection?.heading}
        </h2>
        <p class="text-gray-600 text-sm sm:text-base mb-6 font-secondaryFont">
          {bannerSection?.subHeading}
        </p>
        <BookNowButton className="bg-black text-white text-sm sm:text-base font-primaryFont py-3 px-10 rounded-xl hover:bg-gray-800">
          {bannerSection?.buttonText}
        </BookNowButton>
      </div>
    </div>
  </div>
</div>
