---
import { Image } from "astro:assets";
import BookNowButton from "@components/ui/BookNowButton.astro";

const {
  content: { categories },
} = Astro.props;
// console.log(categories);
---

<div class=" sm:py-10 w-11/12  mx-auto">
  <div class="mx-auto  container">
    <div class="mx-auto ">
      <h2 class="text-[24px] sm:text-[36px] tracking-tight  font-primaryFont">
        {categories?.categories_heading}
      </h2>
      <p class="mt-2 text-md sm:text-xl leading-8 text-gray-600 font-secondaryFont">
        {categories?.categories_description}
      </p>
    </div>
    <ul
      role="list"
      class="mx-auto mt-4 sm:mt-10 grid max-w-2xl grid-cols-1 gap-6 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 lg:gap-8"
    >
      {
        categories?.data?.map((categoriesFood) => (
          <a href={categoriesFood.categories_url_link}>
            <li class="rounded-2xl bg-gray-100 sm:px-8  sm:py-10 py-4">
              <img
                class="mx-auto h-48 w-48 rounded-2xl md:h-56 md:w-56 "
                src={categoriesFood.image}
                alt={categoriesFood.img_alt}
              />
              <h3 class="mt-6 text-base sm:text-xl font-semibold leading-7 tracking-tight text-center font-primaryFont">
                {categoriesFood.product_name}
              </h3>
            </li>
          </a>
        ))
      }
    </ul>
  </div>
</div>
