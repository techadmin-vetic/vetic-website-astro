---
import { Image } from "astro:assets";
const {
  content: { brandsection},
} = Astro.props;
// console.log(brandsection);
---

<div class="w-full mx-auto mt-4 sm:mt-6">
  <div class="container w-11/12 mx-auto py-4 sm:py-6">
    <h2
      class="text-[24px] sm:text-[36px] leading-8 font-primaryFont mb-2 sm:mb-2"
    >
      {brandsection?.brand_heading}
    </h2>

    <p class="text-gray-600 ttext-md sm:text-xl mb-6 sm:mb-6">
      {brandsection?.brand_description}
    </p>
    <div class="doctors-carousel">
      {
        brandsection?.data?.map((brands) => (
          <div class="carousel-cell w-20 sm:w-[250px] px-3 sm:py-4">
            <div class="">
              <div class=" mt-3 mb-6 overflow-hidden w-20  sm:w-[180px] sm:h-24 transition-all duration-300 group-hover:bg-primaryColor p-2">
                <a href={`${brands.brand_link}?utm_source=organic&utm_medium=website&utm_campaign=appdownloadbtn`} class="">
                  <Image
                    src={brands.image}
                    alt={brands.img_alt}
                    width={60}
                    height={60}
                    class="w-full h-full object-fit"
                  />
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

<link
  rel="stylesheet"
  href="https://unpkg.com/flickity@2/dist/flickity.min.css"
/>
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
<script>
  import Flickity from "flickity";

  document.addEventListener("DOMContentLoaded", function () {
    var elem = document.querySelector(".doctors-carousel");
    var flkty = new Flickity(elem, {
      cellAlign: "left",
      groupCells: true,
      contain: true,
      pageDots: false,
      prevNextButtons: false,
      autoPlay: true,
      wrapAround: true,
      draggable: true,
    });
  });
</script>

<style>
  .doctors-carousel .flickity-prev-next-button {
    color: white;
  }
  .doctors-carousel .flickity-prev-next-button:hover {
  }
</style>
