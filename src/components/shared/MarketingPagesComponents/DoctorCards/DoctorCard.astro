---
import BookNowButton from "@components/ui/BookNowButton.astro";

interface Props {
  imageUrl: string;
  displayName: string;
  doctorName: string;
  expertise: string;
  experience: string;
  location: string;
}
const { displayName, doctorName, experience, expertise, imageUrl, location } =
  Astro.props;
---

<div class="flex items-center justify-center px-2 sm:px-6 py-2 sm:py-4">
  <article
    class="border-2 rounded-2xl p-4 border-round flex flex-col items-start justify-between shadow-xl mb-6"
  >
    <div class="relative w-full">
      <BookNowButton location={location}>
        <img
          loading="eager"
          src={imageUrl}
          alt={displayName}
          class="tracking-image aspect-[16/9] w-full h-72 rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
        />
      </BookNowButton>
    </div>
    <div class="w-full">
      <div class="group relative">
        <h3
          class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600 line-clamp-1"
        >
          {doctorName}
        </h3>
      </div>
      <div class="mt-2 flex items-center justify-between">
        <div class="text-1xl leading-6 gap-8">
          <p class="font-semibold text-sm text-gray-500">
            {expertise}
          </p>
          <p class="font-semibold text-gray-500">
            {experience}
          </p>
        </div>
        <div class="">
          <BookNowButton location={location}
            className="tracking-button rounded-md bg-blue-950 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-950 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-iblue-950"
          >
            Book Now
          </BookNowButton>
        </div>
      </div>
    </div>
  </article>
</div>
