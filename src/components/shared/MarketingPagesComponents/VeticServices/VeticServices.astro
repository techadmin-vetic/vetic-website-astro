---
// import type { IBrandSlugPageProps } from "@components/pages/pages_props_interface";
const {
  content: { veticServices },
} = Astro.props;
---

<div class="bg-white mt-6 py-4 sm:py-8 pb-8 bg-gradient-to-b from-sky-50">
  <div class="mx-auto w-11/12 lg:max-w-[82rem] lg:px-2">
    <div class="mx-auto max-w-2xl lg:mx-0 pb-8">
      <h2
        class="text-2xl font-semibold tracking-tight text-gray-900 sm:text-2xl"
      >
        {veticServices?.heading}
      </h2>
    </div>
    <ul
      role="list"
      class="mx-auto grid max-w-2xl grid-cols-2 gap-x-4 gap-y-4 sm:grid-cols-3 md:grid-cols-4 lg:mx-0 lg:max-w-none lg:grid-cols-5 xl:grid-cols-6"
    >
      {
        veticServices.servicesComponent.map((services) => {
          return (
            <div>
              <li class={`${services?.color} py-4 px-4 rounded-lg `}>
                <img
                  class="mx-auto h-12 w-12 rounded-md"
                  src={services?.image}
                  alt="services_logos"
                />
                <h3 class="mt-4 text-base font-semibold tracking-tight text-gray-900">
                  {services?.heading}
                </h3>
                <p class="text-sm text-gray-500 pt-1">
                  {services?.description}
                </p>
              </li>
            </div>
          );
        })
      }
    </ul>
  </div>
</div>
