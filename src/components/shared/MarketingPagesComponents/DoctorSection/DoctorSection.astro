---
import DRCarousel from "../DoctorsCarousel/DRCarousel.astro";
import BookNowButtonMarketing from "@components/ui/BookNowButtonMarketing.astro";

const {
  content: { doctorSection, meta },
} = Astro.props;
---

<div class="bg-gradient-to-b from-green-50 py-4 mt-6 px-4 w-full">
  <div class="space-y-4 w-full lg:w-11/12 mx-auto">
    <div class="text-left">
      <h1 class="text-2xl font-bricolage font-semibold py-2 lg:py-4">
        {doctorSection.heading}
      </h1>
    </div>
    <BookNowButtonMarketing>
      <div
        class="h-96 bg-center bg-cover border-[1px] border-green-600 bg-no-repeat relative rounded-3xl overflow-hidden tracking-image"
        style={{
          backgroundImage: `url("${doctorSection.doctorBannerImage}")`,
        }}
      >
      </div>
    </BookNowButtonMarketing>
    <DRCarousel variant="NEW" hideHeading={false} location={meta.location} />
    <div class="text-center mt-4">
      <BookNowButtonMarketing
        className="bg-[#152239] w-full lg:w-1/2 mx-auto text-white px-4 py-3 rounded-xl font-bricolage tracking-button"
      >
        {doctorSection.buttonText}
      </BookNowButtonMarketing>
    </div>
  </div>
</div>
