---
import BookNowButton from "@components/ui/BookNowButton.astro";

const {
  content: { dogVaccinationCard, catVaccinationCard },
} = Astro.props;
// console.log(dogVaccinationCard);
---

<!-- dog-vaccination-prices -->
<div
  class="font-bricolage mt-4 w-full [background:linear-gradient(178.96deg,_#F5F2FF,_#fff)] pb-4 px-4 sm:px-16 box-border gap-[12px] leading-[normal] tracking-[normal] text-left text-[24px] text-gray"
>
  <h1
    class="font-bricolage text-2xl sm:text-2xl font-semibold pb-4 lg:pb-6 pt-4"
  >
    {dogVaccinationCard.heading}
  </h1>

  <div class="border-[1px] border-grey-900 bg-white p-4 rounded-xl">
    <img
      class="rounded-lg max-w-full w-full overflow-hidden max-h-full md:h-[350px] lg:h-[400px] object-cover lg:contain"
      src={dogVaccinationCard.mobileImage}
      alt="about_banner_image"
    />

    {
      dogVaccinationCard.vaccinationDetails.map((data) => {
        return (
          <div class="flex justify-between gap-x-6 py-3 mt-2">
            <div class="flex min-w-0 gap-x-2">
              <img
                class="h-6 w-6 flex-none bg-gray-50"
                src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/landing+page/vaccinationStar.svg"
                alt=""
              />
              <div class="">
                <p class="text-base font-semibold leading-6 text-gray-900">
                  {data.content}
                </p>
              </div>
            </div>
            <div class="">
              <p class="text-base leading-6 text-gray-900">{data.price}</p>
              <p class="text-sm leading-5 text-gray-500 line-through">
                {data.cutPrice}
              </p>
            </div>
          </div>
        );
      })
    }
    <BookNowButton
      className=" bg-primaryColor text-white w-full text-center text-base px-7 py-2 mt-2 rounded-xl font-bricolage tracking-button "
    >
      {dogVaccinationCard.buttonText}
    </BookNowButton>
  </div>
</div>

