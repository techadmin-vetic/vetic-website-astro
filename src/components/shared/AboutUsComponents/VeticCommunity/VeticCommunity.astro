---
import { Image } from "astro:assets";

const {
  content: { veticCommunity },
} = Astro.props;
---

<section class="bg-white py-6">
  <div class="container w-11/12 mx-auto py-4">
    <h2 class="text-3xl md:text-4xl font-primaryFont mb-8 text-gray-800">
      {veticCommunity?.heading}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        veticCommunity.cardData.map((commitment) => (
          <div class="bg-white rounded-lg overflow-hidden">
            <img
              src={commitment.image}
              alt={commitment.title}
              class="w-full h-48 object-cover"
            />
            <div class="py-6">
              <h3 class="text-xl font-semibold mb-2 font-primaryFont text-gray-800">
                {commitment?.heading}
              </h3>
              <p class="text-gray-700 font-secondaryFont text-sm">
                {commitment?.subHeading}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
