---
import { Image } from "astro:assets";
const {
  content: { veticStory },
} = Astro.props;
---

<section class="container w-11/12 mx-auto py-12 md:py-16">
  <div
    class="flex flex-col md:flex-row items-center justify-center md:items-center md:justify-between gap-8 md:gap-12"
  >
    <div class="w-full md:w-1/2 order-2 md:order-1">
      <h2 class="text-3xl md:text-4xl font-primaryFont mb-6">
        {veticStory?.heading1}
        <span class="text-primaryFontColor">{veticStory?.heading2}</span>
      </h2>
      <p class="text-gray-700 w-[90%] font-secondaryFont mb-4">
        {veticStory?.subHeading1}
      </p>
      <p class="text-gray-700 font-secondaryFont">
        {veticStory?.subHeading2}
      </p>
    </div>
    <div class="w-full md:w-1/2 order-1 md:order-2 flex justify-center">
      <div
        class="rounded-2xl overflow-hidden shadow-lg sm:h-[500px] sm:w-[500px]"
      >
        <Image
          src={veticStory?.desktopImage}
          alt="A person holding a dog"
          class="w-full h-auto object-cover"
          width={500}
          height={500}
        />
      </div>
    </div>
  </div>
</section>
