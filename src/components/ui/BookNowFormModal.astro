---
import BookNowForm from "../shared/CommonComponents/BookNowForms/BookNowForms.tsx";

interface Props {
  location: string;
}

const { location } = Astro.props;
---

<div class="relative inset-0 bg-opacity-5 overflow-y-auto w-full rounded-md">
  <div class="top-20 mx-auto px-2 border w-96 shadow-lg rounded-md bg-white">
    <div class="px-4">
      <div class="flex justify-between items-center">
        <!-- <img
          src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Group.png"
          alt="Pet"
          class="rounded-t-lg"
        /> -->
        <p class="py-8"></p>
        <button
          @click="$store.ui.closeBookNow()"
          class="text-zinc-700 bg-zinc-200 hover:bg-zinc-100 hover:text-zinc-900 rounded-full text-sm p-0.5 ml-auto inline-flex items-center"
          aria-label="close"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <h3
        class="text-lg tracking-wide text-center leading-6 font-medium text-zinc-900"
      >
      Looking for Advanced, Human-Grade Care for Your Pet?
      </h3>
      <div class="mt-2 py-3 mb-2">
        <BookNowForm inSideModal={true} client:load location={location} />
      </div>
    </div>
  </div>
</div>
