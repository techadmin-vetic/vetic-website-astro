---
const { variant, srNumber } = Astro.props;
---

<a x-data=`{variant: '${variant}', isScrolled: true }` href={`tel:${srNumber}`}>
  <button
    type="button"
    x-bind:class="{'tracking-button rounded-md bg-blue-950 px-3.5 py-2.5 text-sm sm:text-lg sm:px-6 font-semibold text-white shadow-sm hover:bg-950-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-950': variant === 'button', 'tracking-button fixed bottom-8 right-10 sm:hidden rounded-full p-4 flex justify-center items-center flex-col bg-blue-950 text-white': variant === 'floating' && isScrolled }"
  >
    <span x-show="variant === 'button'">Call Now</span>
    <span
      x-show="variant === 'floating' && isScrolled"
      class="w-6 h-6 text-white"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5Z"
          clip-rule="evenodd"></path>
      </svg>
    </span>
  </button>
</a>
