---
import BookNowButton from "./BookNowButton.astro";

// const url = Astro.url.pathname;
// const isBengaluruPage = url.includes("bengaluru");

const param = Astro.params;
let isBengaluruGroomingPage = false;
if (typeof param["slug_bengaluru"] === "string") {
  const paramsArray = param["slug_bengaluru"].split("-");
  isBengaluruGroomingPage = paramsArray.includes("grooming") && paramsArray.includes("pet") && paramsArray.includes("new") && paramsArray.includes("lp");
}
// console.log(isBengaluruGroomingPage)
---

<!-- Include Alpine.js -->
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
></script>

<div
  x-data="{ isScrolled: false }"
  x-init="window.addEventListener('scroll', () => { isScrolled = window.scrollY > 370 })"
>
  <BookNowButton location={Astro.props.location}>
    <div
      x-show="isScrolled"
      x-transition
      class="sm:hidden fixed bottom-0 left-1/2 -translate-x-1/2 transform z-50 bg-white p-2 px-4 w-full"
    >
      <div class="">
        <div
          class="sticky-bn-form-button bg-[#152239] text-white text-center text-md rounded-md shadow-md py-2 px-4"
        >
          {isBengaluruGroomingPage ? "Claim Summer Savings Now" : "Book Now"}
        </div>

