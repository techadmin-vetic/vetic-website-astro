---
import AppDownloadBar from "@components/shared/CommonComponents/AppDownloadBar/AppDownloadBar.astro";
import Image from "astro/components/Image.astro";

export const prerender = false; // Server-side rendering enabled

// Get user agent from the request headers
const userAgent = Astro.request.headers.get("user-agent") || "";
const encodedUA = encodeURIComponent(userAgent);

// Call apicagent API
try {
  const res = await fetch(`https://api.apicagent.com/?ua=${encodedUA}`);
  const deviceInfo = await res.json();

  // Extract OS name and handle case where it might be undefined
  const osName = deviceInfo.os?.name?.toLowerCase() || "";

  // Check if the device is allowed (iOS or Mac)
  const isAllowed = osName === "ios" || osName === "mac";

  // Redirect if device is not allowed
  if (!isAllowed) {
    return Astro.redirect(
      "https://vetic.sng.link/Awgsc/0i7r3?_dl=vetic.sng.link&_p=screen_id=310&_smtype=3"
    );
  }
} catch (error) {
  console.error("Error detecting device:", error);
  // In case of error, allow the page to load rather than having a broken experience
}
