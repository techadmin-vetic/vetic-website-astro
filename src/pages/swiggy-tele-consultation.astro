      </form>

      <script>
        // Client-side script
        document.addEventListener("DOMContentLoaded", function () {
          const phoneInput = document.getElementById("phoneNumber");
          const claimButton = document.getElementById("claimButton");
          const phoneError = document.getElementById("phoneError");
          const phoneForm = document.getElementById("phoneForm");

          function validatePhoneNumber(phone) {
            const trimmedPhone = phone.trim();
            const regex = /^(\+91[\-\s]?|0)?[6789]\d{9}$/;
            return regex.test(trimmedPhone);
          }

          function handleInput(event) {
            const inputElement = event.target;
            const value = inputElement.value;

            // Only allow numbers, +, -, and spaces while typing
            const sanitizedValue = value.replace(/[^\d+\-\s]/g, "");
            inputElement.value = sanitizedValue;

            // Enable/Disable button based on validation
            if (validatePhoneNumber(sanitizedValue)) {
              claimButton.disabled = false;
              phoneError.classList.add("hidden");
            } else {
              claimButton.disabled = true;
              if (sanitizedValue.length > 0) {
                phoneError.classList.remove("hidden");
              } else {
                phoneError.classList.add("hidden");
              }
            }
          }

          function handleSubmit(event) {
            event.preventDefault();

            if (!phoneInput) return;

            const phone = phoneInput.value.trim();

            if (!validatePhoneNumber(phone)) {
              phoneError.classList.remove("hidden");
              return;
            }

            // Disable button and show loading state
            claimButton.disabled = true;
            // claimButton.textContent = "Processing...";
            phoneInput.value = "";
            const requestBody = JSON.stringify({
              mobile: phone,
            });

            fetch("https://iam.vetic.in/iam/swiggy-tele-intent/", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: requestBody,
              credentials: "omit",
            })
              .then((response) => {
                if (!response.ok) {
                  throw new Error("Network response was not ok");
                }
                return response.json();
              })
              .then((data) => {
                console.log("API Response Data:", data);

                if (data?.status === true) {
                  window.location.href =
                    "https://vetic.sng.link/Awgsc/0i7r3?_dl=vetic.sng.link&_p=screen_id=310&_smtype=3";
                } else {
                  console.error("API status was false, not redirecting.");
                  claimButton.textContent = "Claim Now";
                  claimButton.disabled = false;
                  alert("Something went wrong. Please try again later.");
                }
              })
              .catch((error) => {
                console.error(
                  "There was a problem with the fetch operation:",
                  error
                );
                claimButton.textContent = "Claim Now";
                claimButton.disabled = false;
                alert("Something went wrong. Please try again later.");
              });
          }

          // Attach event listeners
          if (phoneInput) {
            phoneInput.addEventListener("input", handleInput);
          }

          if (phoneForm) {
            phoneForm.addEventListener("submit", handleSubmit);
          }
        });
      </script>
    </div>
  </body>
