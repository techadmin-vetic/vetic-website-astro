---
import MainLayout from "@layouts/_main_layout.astro";
---

<MainLayout
  withServiceLayout={false}
  title="Thank You"
  description="Thank You"
  canonicalTag="thankyou"
  noIndex={true}
>
  <head slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </head>

  <div id="thank-you-page-container" class="bg-white h-full w-full">
    <div class="h-screen w-full relative">
      <div class="bg-green-100 relative">
        <button
          onclick="window.history.back()"
          class="absolute top-4 right-4 w-7 h-7 bg-white rounded-full cursor-pointer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="p-1 text-gray-600"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18 18 6M6 6l12 12"></path>
          </svg>
        </button>
        <div class="mx-auto text-center pt-4">
          <img
            src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Icon+(1).png"
            alt="Logo"
            class="mx-auto w-10 h-22 mb-5 pt-12"
          />
          <p
            class="text-gray-900 text-2xl font-bold font-bricolage antialiased tracking-wide"
          >
            Thanks for trusting us
          </p>
        </div>
        <p
          class="text-md text-zinc-800 text-center font-bricolage antialiased pb-4"
        >
          A Vetic representative will contact you shortly
        </p>
      </div>
      <div
        class="w-11/12 overflow-hidden rounded-3xl mx-auto mb-4 mt-6 sm:h-500"
      >
        <iframe
          loading="lazy"
          width="100%"
          height="240"
          src="https://www.youtube.com/embed/eNjRweya7jA?start=00&rel=0"
          title="YouTube video player"
          allow="accelerometer; 
                autoplay; 
                clipboard-write; 
                encrypted-media; 
                gyroscope; 
                picture-in-picture; 
                web-share;
                allowfullscreen;"
        ></iframe>
      </div>
      <p
        class="text-lg text-zinc-800 text-center mb-4 px-1 font-bricolage antialiased tracking-wider"
      >
        Download the application and get personalised offers on every visit!
      </p>
      <div class="flex items-center gap-2 justify-center mt-4">
        <a
          href="https://apps.apple.com/in/app/vetic-pet-clinic-grooming/id6444027769"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Mobile+app+store+badge+(3).png"
            alt="App Store"
            class="mr-2"
          /></a
        >

        <a
          href="https://vetic.sng.link/Awgsc/4ltw/uwis"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img
            src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Mobile+app+store+badge+(2).png"
            alt="Google Play"
            class="mr-2"
          />
        </a>
      </div>
      <div class="mx-auto border-t-[1px] w-full absolute bottom-2 gap-4 mt-6">
        <div class="py-4 flex items-center justify-evenly">
          <p
            class="text-sm sm:text-lg tracking-wide font-bricolage antialiased font-light"
          >
            Follow us on
          </p>
          <a
            href="https://www.instagram.com/vetic.in"
            target="_blank"
            class="text-zinc-500 w-4 h-4 sm:w-8 sm:h-8 hover:text-zinc-700"
          >
            <img
              src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Social+icon.png"
              alt="Instagram"
            />
          </a>
          <a
            href="https://www.youtube.com/@veticpetcare"
            target="_blank"
            class="text-zinc-500 w-4 h-4 sm:w-8 sm:h-8 hover:text-zinc-700"
          >
            <img
              src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Vector+(2).png"
              alt="YouTube"
            />
          </a>
          <a
            href="https://www.facebook.com/vetic.in/"
            target="_blank"
            class="text-zinc-500 w-4 h-4 sm:w-8 sm:h-8 hover:text-zinc-700"
          >
            <img
              src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Vector+(3).png"
              alt="Facebook"
            />
          </a>
          <a
            href="https://in.linkedin.com/company/veticin"
            target="_blank"
            class="text-zinc-500 w-4 h-4 sm:w-8 sm:h-8 hover:text-zinc-700"
          >
            <img
              src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Vector+(4).png"
              alt="LinkedIn"
            />
          </a>
          <!-- <a
            href="https://x.com/vetic_in"
            target="_blank"
            class="text-zinc-500 w-4 h-4 sm:w-8 sm:h-8 hover:text-zinc-700"
          >
            <img
              src="https://vetic-img.s3.ap-south-1.amazonaws.com/website/grooming_page/Vector+(5).png"
              alt="Twitter"
            />
          </a> -->
        </div>
      </div>
    </div>
  </div>
</MainLayout>
